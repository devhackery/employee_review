<p id="notice"><%= notice %></p>

<h1>Surveys</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= survey.start_date %></td>
        <td><%= survey.end_date %></td>
        
        <td><%= link_to 'Show', employee_survey_path(survey.employee_id,survey) %></td>
        <td><%= link_to 'Edit', edit_employee_survey_path(survey.employee_id,survey) %></td>
        <td><%= link_to 'Destroy', employee_survey_path(survey.employee_id,survey), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 
